<?xml version='1.0' encoding='utf-8'?>
<widget id="com.foodcode.foodcode" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FoodCode</name>
    <description>
        Food Code is a mobile app that tells you the calorie count of the food you are consuming by taking a picture of the food.
    </description>
    <author email="jyothin.madari.nabla@gmail.com" href="http://food-code.eu-gb.mybluemix.net">
        Hungry Mind on a Diet
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
